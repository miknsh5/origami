{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist"
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "node_modules",
        "typings/main",
        "typings/main.d.ts"
    ],
    "filesGlob": [
        "app/**/*.ts",
        "typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}